<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="VisualBackUpApp.MainWindow"
        Title="비주얼 노벨 메이커 (Mac/Win)" Height="500" Width="450"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20" VerticalAlignment="Center" Spacing="10">
        <TextBlock Text="Visual Novel Maker" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <TextBlock Text="1. 대본 파일 불러오기" FontWeight="Bold"/>
        <Button Content="엑셀 파일 선택" Click="BtnLoadExcel_Click" HorizontalAlignment="Stretch" Height="40"/>

        <TextBlock Text="2. 리소스 설정" FontWeight="Bold" Margin="0,10,0,0"/>
        <Grid ColumnDefinitions="*, 10, *">
            <Button Grid.Column="0" Name="BtnFace" Content="얼굴 설정" Click="BtnFace_Click" IsEnabled="False" HorizontalAlignment="Stretch" Height="40"/>
            <Button Grid.Column="2" Name="BtnBg" Content="배경 설정" Click="BtnBg_Click" IsEnabled="False" HorizontalAlignment="Stretch" Height="40"/>
        </Grid>

        <TextBlock Text="3. 완료" FontWeight="Bold" Margin="0,10,0,0"/>
        <Button Name="BtnGen" Content="HTML 생성하기" Click="BtnGen_Click" IsEnabled="False" Background="#007ACC" Foreground="White" FontWeight="Bold" HorizontalAlignment="Stretch" Height="50"/>
        
        <TextBlock Name="TxtStatus" Text="대기 중..." HorizontalAlignment="Center" Foreground="Gray"/>
    </StackPanel>
</Window>